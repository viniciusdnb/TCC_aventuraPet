<script>
    progressBar(90);

    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("password").addEventListener("input", function () {
            var inputPassword = document.getElementById("password").value

            formatInputLength(inputPassword);


        });


        function formatInputLength(inputPassword) {

            inputPasswordLength = document.querySelector("#length");

            if (inputPassword.length >= 8) 
            {
                inputPasswordLength.style.color = "black";
                
                if(inputPasswordLength.querySelector('img') == null){
                    var endImg = "/img/correct-20.png";
                    var img = document.createElement("img");
                    img.setAttribute("src", endImg);
                    inputPasswordLength.appendChild(img)
                }


                
            } else {
                inputPasswordLength.style.color = "rgb(178, 178, 178)";
                inputPasswordLength.removeChild(inputPasswordLength.querySelector('img'))
            }

            console.log(inputPassword.length);
        }
    });
</script>
